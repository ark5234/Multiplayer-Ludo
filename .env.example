# Environment variables for Multi-Platform Deployment
# Backend (Render) + Frontend (Vercel) + Database (MongoDB Atlas)

# Production environment for backend
NODE_ENV=production
PORT=10000

# MongoDB Atlas connection string (replace with your actual credentials)
CONNECTION_URI=mongodb+srv://ludouser:YOUR_PASSWORD@multiplayer-ludo.xxxxx.mongodb.net/multiplayer-ludo?retryWrites=true&w=majority

# CORS origins (update with your actual Vercel URL after deployment)
ALLOWED_ORIGINS=https://multiplayer-ludo-xxxxx.vercel.app,https://your-custom-domain.com

# Socket.IO CORS (update with your actual Vercel URL)
SOCKET_IO_CORS_ORIGIN=https://multiplayer-ludo-xxxxx.vercel.app,https://your-custom-domain.com

# Session security (generate a strong secret for production)
SESSION_SECRET=change-this-to-a-very-secure-random-string-in-production

# Additional security headers for production
TRUST_PROXY=true