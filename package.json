{
  "name": "mern-ludo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.20",
    "@testing-library/user-event": "^14.5.1",
    "axios": "^1.6.2",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-beforeunload": "^2.6.0",
    "react-dom": "^18.2.0",
    "react-loading": "^2.0.3",
    "react-router-dom": "^6.20.1",
    "react-scripts": "^5.0.1",
    "react-transition-group": "^4.4.5",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-private-property-in-object": "^7.16.7",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "react-scripts start",
    "dev:backend": "cd backend && npm run dev",
    "dev:quick": "echo \"🚀 Starting local development...\" && echo \"⚠️ Make sure MongoDB is running locally on port 27017\" && npm run dev",
    "build:production": "npm run build && npm run copy:build",
    "copy:build": "xcopy build backend\\build\\ /e /i /y || cp -r build backend/",
    "deploy:render": "npm run build:production && echo \"Ready for Render deployment!\"",
    "network": "powershell -ExecutionPolicy Bypass -File setup-multiplayer.ps1",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "npm run docker:build && npm run docker:up && echo \"🚀 App running at http://localhost:3000\" && echo \"📊 Backend API at http://localhost:8080\" && npm run docker:logs",
    "prod": "npm run build && npm run serve-prod",
    "serve-prod": "npx serve -s build -l 3000",
    "start-prod-win": "start-production.bat",
    "start-prod-unix": "./start-production.sh"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
